<%= form_with model: post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <% post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.rich_text_area :content %>
    <% post.errors.full_messages_for(:content).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <%= f.submit %>
<% end %>
