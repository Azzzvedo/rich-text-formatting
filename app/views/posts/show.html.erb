
<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<p><%= link_to "Edit", edit_post_path(@post) %></p>
<p><%= link_to "Delete", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></p>
<p><%= link_to "Back to all posts", posts_path %></p>
